{
    "name": "pgs-php/taskmanager",
    "type": "project",
    "license": "MIT",
    "require": {
        "ramsey/uuid": "^3.7",
        "fideloper/proxy": "~4.0",
        "laravel/framework": "5.6.*",
        "laravel/tinker": "~1.0"
    },
    "require-dev": {
        "behat/behat": "^3.4",
        "phpunit/phpunit": "^6.5",
        "phpspec/phpspec": "^4.2",
        "filp/whoops": "~2.0",
        "nunomaduro/collision": "~1.1",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~1.0",
        "symfony/thanks": "^1.0"
    },
    "autoload": {
        "classmap": [
            "src/UI/Laravel/database/seeds",
            "src/UI/Laravel/database/factories"
        ],
        "psr-4": {
            "App\\Application\\": "src/Application/",
            "App\\Infrastructure\\": "src/Infrastructure/",
            "App\\": "src/UI/Laravel/app"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php bin/artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php bin/artisan package:discover"
        ]
    }
}
